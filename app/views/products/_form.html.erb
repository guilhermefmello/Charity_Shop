 <% if @product.errors.any? %>
    <div class="row">
     <div class="col-xs-8 col-sm-offset-2">
     <div class="panel panel-danger">
      <div class="panel-heading">
      <h2 class="panel-title">
      <h2><%= pluralize(@product.errors.count, "error") %> This product can't be saved:</h2>
      <div class="panel-body">

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
         </div>
       </div>
      </div>
    </div>
  
  <% end %>


 <div class='row'>
  <div class='col-xs-8'>

   <%= form_for(@product, :html => {class: "form-horizontal",role: "form"}) do |f| %>

      <div class="form-group">
      <div class="control-label col-sm-2 ">
        <%= f.label :title %>
       </div>
       <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Enter title ", autofocus: true %>
       </div>
   </div>

      <div class="form-group">
      <div class="control-label col-sm-2 ">
        <%= f.label :description %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :description, rows: 10, class:"form-control", placeholder:"Enter description" %>
      </div>
    </div>

      <div class="form-group">
      <div class="control-label col-sm-2 ">
        <%= f.label :image_url %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :image_url, class: "form-control", placeholder: "Place image_url", autofocus: true %>
      </div>
      </div>
      
      <div class="form-group">
      <div class="control-label col-sm-2 ">
        <%= f.label :price %>
      </div>
      <div class="col-sm-10">
        <%= f.number_field :price, class: "form-control", placeholder: "Enter â‚¬ price ", autofocus: true %>
      </div>
       </div>
      
       <div class="form-group">
      <div class="control-label col-sm-2 ">
        <%= f.label :category %>
        </div>
     <div class="col-sm-10">
        <%= f.text_field :category,class: "form-control", placeholder: "Enter category ", autofocus: true  %>
      </div>
      </div>

      <div class="form-group">
      <div class="control-label col-sm-2 ">
        <%= f.label :subcategory %>
        </div>
        <div class="col-sm-10">
        <%= f.text_field :subcategory,class: "form-control", placeholder: "Enter subcategory", autofocus: true %>
      </div>
      </div>

   <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary btn-md"%>
      </div>
    </div>
   <% end %>  


<div class="col-xs-6 col-xs-offset-4 ">
  [<%= link_to 'Cancel request and return to product listing', products_path %>]
  </div>

 </div>
 </div>
